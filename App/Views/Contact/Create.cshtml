@model ContactModel;
@{
    ViewData["Title"] = "Criar contato";
}

<div class="text-center">
   
    <h1>Cadastrar contato</h1>
</div>

<form asp-controller="Contact" asp-action="Create" method="post">

    <div class="mb-3">
        <label for="name" class="form-label">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do contato">
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" placeholder="Digite o email do contato">
    </div>

    <div class="mb-3">
        <label for="phoneNumber" class="form-label">Telefone</label>
        <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Digite o telefone do contato">
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary w-100">Adicionar</button>
    </div>

     <div class="mb-3">
        <a  class="btn btn-secondary w-100" asp-controller="Contact" asp-action="Index" role="button">Voltar</a>
    </div>
</form>