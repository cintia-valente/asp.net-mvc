@model ContactModel;
@{
    ViewData["Title"] = "Criar contato";
}

<div class="text-center">
    <h1>Cadastrar contato</h1>
</div>

<form asp-controller="Contact" asp-action="Post" method="post">

    <label for="name">Nome:</label>
    <input name="name" id="name" type="text" placeholder="Digite o nome"/>

    <label for="email">Email:</label>
    <input name="email" id="email" type="email" placeholder="Digite o email"/>

    <label for="phoneNumber">Telefone:</label>
    <input name="phoneNumber" id="phoneNumber" type="text" placeholder="Digite o telefone"/>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary w-100">Adicionar</button>
    </div>

     <div class="mb-3">
        <a  class="btn btn-secondary w-100" asp-controller="Contact" asp-action="Index" role="button">Voltar</a>
    </div>
</form>