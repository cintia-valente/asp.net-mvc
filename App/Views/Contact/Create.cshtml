@model ContactModel;
@{
    ViewData["Title"] = "Criar contato";
}

<div class="text-center">
    <h1>Cadastrar contato</h1>
</div>

<form asp-controller="Contact" asp-action="Post" method="post">

    <div class="mb-3">
        <label for="name" class="form-label">Nome:</label>
        <input name="name" class="form-control" id="name" type="text" placeholder="Digite o nome" />
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input name="email" class="form-control" id="email" type="email" placeholder="Digite o email" />
    </div>

    <div class="mb-3">
        <label for="phoneNumber" class="form-label">Telefone:</label>
        <input name="phoneNumber" class="form-control" id="phoneNumber" type="text" placeholder="Digite o telefone" />
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary w-100">Adicionar</button>
    </div>

     <div class="mb-3">
        <a  class="btn btn-secondary w-100" asp-controller="Contact" asp-action="Index" role="button">Voltar</a>
    </div>
</form>