@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">

    <h1>Editar contato</h1>
</div>

<form>
    <div class="mb-3">
        <label for="name" class="form-label">Nome</label>
        <input type="text" class="form-control" placeholder="Digite o nome do contato">
    </div>

    <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="text" class="form-control" placeholder="Digite o email do contato">
    </div>

    <div class="mb-3">
        <label for="telefone" class="form-label">Telefone</label>
        <input type="text" class="form-control" placeholder="Digite o telefone do contato">
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary w-100">Alterar</button>
    </div>

    <div class="mb-3">
        <a class="btn btn-secondary w-100" asp-controller="Contact" asp-action="Index" role="button">Voltar</a>
    </div>
</form>